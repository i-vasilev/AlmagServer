<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info" name="elamed">
    <Appenders>
        <File name="File" fileName="errors.log">
            <PatternLayout pattern="%d{dd-MM-yyyy_HH:mm:ss} %-5p [%c{1}]: %m%n"/>
        </File>
    </Appenders>

    <Loggers>
        <Logger name="com.elamed.almag" level="all">
            <AppenderRef ref="File"/>
        </Logger>
    </Loggers>
</Configuration>
